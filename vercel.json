{
  "rewrites": [
    {
      "source": "/((?!sitemap.xml).*)",
      "destination": "/"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/static/sitemap.xml"
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" }
      ]
    }
  ]
}